---
import HeaderLink from './HeaderLink.astro';
import BannerInfo from './BannerInfo.astro'
import { SITE_TITLE } from '../consts';
---

<BannerInfo />
<header class="position-sticky top-0 z-3">
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/diseño">Diseños</HeaderLink>
			<HeaderLink href="/about">Sobre mí</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://m.webtoo.ls/@astro" target="_blank">
				<span class="sr-only">Follow Astro on Mastodon</span>
				<i class="bi bi-facebook fs-3 text-bold"></i>
			</a>
			<a href="https://twitter.com/astrodotbuild" target="_blank">
				<span class="sr-only">Follow Astro on Twitter</span>
				<i class="bi bi-twitter fs-3 text-bold"></i>
			</a>
			<a href="#" target="_blank">
				<span class="sr-only">Whatsapp de la tienda</span>
				<i class="bi bi-whatsapp fs-3 text-bold"></i>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--bg-banner);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
